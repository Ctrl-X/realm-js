{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "es2018",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"jsx": "react",
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		],
		"types": [
			"react",
			"realm-web"
		],
		"lib": [
			"ES2018",
			"ES2018.AsyncIterable"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude": [
		"src/tests/**/*.ts",
		"src/tests/**/*.tsx"
	]
}